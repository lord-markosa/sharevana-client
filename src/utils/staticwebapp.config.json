{
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/",
            "rewrite": "/index.html"
        },
        {
            "route": "/login",
            "rewrite": "/index.html"
        },
        {
            "route": "/register",
            "rewrite": "/index.html"
        },
        {
            "route": "/home",
            "rewrite": "/index.html"
        },
        {
            "route": "/chat/:id",
            "rewrite": "/index.html"
        },
        {
            "route": "/new-story",
            "rewrite": "/index.html"
        },
        {
            "route": "/*",
            "rewrite": "/index.html"
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": ["/static/*"]
    }
}
